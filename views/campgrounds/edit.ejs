<% include ../partials/header %>
<h1 style="text-align: center;">Edit <%= campground.name %></h1>
<div class="container">
    <div style="width: 30%; margin: 25px auto">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Camp Name</label>
                <input class="form-control" type="text" id="name" value="<%= campground.name %>" name="campground[name]">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" id="price" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" id="image" value="<%= campground.image %>" name="campground[image]">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" id="description" value="<%= campground.description %>" name="campground[description]">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" id="location" value="<%= campground.location %>" name="location">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>    
<% include ../partials/footer %>